<% if current_user %>
Logged in as <%= current_user.nombre %>.
<%= link_to "Log Out", signout_path %>

<h1>Buscando recetas de <%= @search_term %></h1>
<br>
<form action="/" method="get">
    <label for="buscar">Receta:</label>
    <input type="text" id="buscar" name="buscar"><br><br>
    <label for="page">Página:</label>
    <input type="text" id="page" name="page"><br><br>
    <input type="submit" value="Submit">
</form>
<br>
<hr />
<table class="table table-bordered table-striped"  border="1">
    <tr> <th>Foto</th><th>Título</th><th>Ingredientes</th>        
    </tr>
    <% @recetas.each do |r| %>
    <tr>
        <td><%= image_tag(r["thumbnail"]) %></td>
        <td><%= link_to sanitize(r["title"]), r["href"] %></td>
        <td><%= r["ingredients"] %></td>
    </tr>
    <% end %>

</table>


<% else %>
<h1>puppyrecetas</h1>
  <%= link_to "Sign Up", signup_path %> or 
  <%= link_to "Log In", login_path %>
<% end %>
